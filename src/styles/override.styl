.el-button
	svg
		width: 20px
		fill: $Light_Silver
		transition: fill 200ms
	&:hover
		svg
			fill: $blue

.el-button--text
	color: $Silver
	fill: $Silver

.el-dropdown
	& > .icon
		width: 21px
		height: 21px

.el-dropdown-menu
	padding: 0

.el-dropdown-menu__item
	svg
		height: 14px
		margin: 0px 12px -3px 0
	&:hover
		fill: $blue

.el-message-box
	// max-width: 420px
	width: auto !important
	margin: 0 1em

.v-modal
	height: 100vh
	width: 100vw

// .el-message-box__wrapper
