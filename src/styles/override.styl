// 	width: 100vw


.CodeMirror
	border: 1px solid #eee
	// max-height: 200px
	height: auto

.el-select__tags
	overflow: hidden

.xxx-pop
	background: $rock_light !important
	border-color: $rock_dark !important
	.popper__arrow
		border-bottom-color: $rock_dark !important
		&:after
			border-bottom-color: $rock_light !important
	.el-select-dropdown__item.selected
		background-color: $rock_light !important
		color: #fff !important
	.el-select-dropdown__item
		color: $Silver
		background: $rock_light !important
		&.hover
			background: $rock_light !important
			color: #fff !important

#left-secondary-body
	padding: 26px 15px
	& > div > div
		padding: 15px 0

	::-webkit-input-placeholder
		color: $Silver
	::-moz-placeholder
		color: $Silver
	:-moz-placeholder
		color: $Silver
	:-ms-input-placeholder
		color: $Silver
	input
		color: $Extra_Light_Silver
		font-weight: bold
		background: none
		border: none
		// border-bottom: 1px dotted $rock_dark
		&:focus
			color: #fff

	.el-input-group__append
		background: none !important
		border: none !important
		&:hover
			color: #fff

	.el-input-number
		border-bottom: none !important
		span
			background: $rock
			border: none
			font-size: 1.1em
		input
			font-size: 1.5em
			border-bottom: none !important

	.el-input--prefix .el-input__inner
		padding-left: 40px



	.el-tag
		background: $rock
		color: $Extra_Light_Silver
		border-color: $Black
		.el-tag__close
			background: none
			&:hover
				color: #fff

	.el-select
		width: 100%
